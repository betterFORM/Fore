    <!--
        change to WARN in production environments
    -->
    <category name="de.betterform.fore.agent.web.flux">
        <priority value="INFO"/>
    </category>

    <category name="de.betterform.fore.agent.web.cache">
        <priority value="INFO"/>
    </category>

    <category name="de.betterform.fore.xml.xforms">
        <priority value="DEBUG"/>
    </category>

    <root>
        <priority value="ERROR"/>
        <appender-ref ref="SHELL"/>
    </root>

</log4j:configuration>
